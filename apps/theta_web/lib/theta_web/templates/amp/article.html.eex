<% floki = md_to_floki(@page.body.article.body) %>
<section class="section">
	<div class="container">
		<div class="row">
			<div class="column column-66">
				<ul class="breadcrumb">
					<li>
						<a href="https://theta.vn/<%= @page.body.article.menu.path_alias.slug %>">
							<span><%= @page.body.article.menu.title %></span>
						</a>
					</li>
				</ul>

				<article class="article">
					<section class="hero">
						<div class="hero-body">
							<h1 class="title is-1" itemprop="headline">
								<%= @page.body.article.title %>
							</h1>

							<footer class="subtitle is-6">
								<div>
									<i class="tti ic-user f1ar f1a-user"></i>
									<span>
											<%=  @page.body.article.author.user.name %>
									</span>
									<i class="tti ic-calendar"></i> <%=	time_translate(@page.body.article.inserted_at, "vi") %>
								</div>

								<%= if length(@page.body.article.tag) > 0 do %>
								<i class="tti ic-tag"></i>
								<%= for tag <- @page.body.article.tag do %>
								<span class="tag is-light is-rounded">
                  <%= link(tag.slug, to: linktag(tag.slug)) %> <%= " " %>
                </span>
								<% end %>
								<% end %>
								<nav class="nav-article">
									<div class="card toc">
										<header class="card-header">
											<h2 class="card-header-title">
												Mục lục
											</h2>
										</header>
										<div class="card-content">
											<ol><%= toc floki, @page.head.canonical %></ol>
										</div>
									</div>
								</nav>
							</footer>
						</div>
					</section>
					<div class="content">
						<div><%= @page.body.article.summary %></div>
						<%= img_amp( Routes.static_path(@conn, @page.body.article.photo), "lager", @page.body.article.title) %>
						<div><%= markdown floki %></div>

					</div>
				</article>
			</div>
			<div class="column">
				<div class="cl-right">
					<!--
					<div class="card">
						<div class="card-content">
							<div class="content">
								<%= render(ThetaWeb.Component.SearchView, "search_box.html") %>
							</div>
						</div>
					</div>
					<hr/>-->
					<amp-state id="data"
					           src="/apiv1/article/<%= '#{@page.body.article.menu_id}m-#{@page.body.article.id}a' %>.json">
					</amp-state>
					<%= if length(@page.body.serial) > 0 do %>
					<div class="card">
						<header class="card-header">
							<p class="card-header-title">
								Bài viết trong serial
							</p>
						</header>
						<div class="card-content">
							<div class="content">
								<amp-list
												width="auto"
												height="20"
												src="amp-state:data.serial"
								>
									<div placeholder>Tải dữ liệu ...</div>
									<div fallback>Không có dữ liệu.</div>

									<template type="amp-mustache">
										<div class="url-entry">
											<a href="{{url}}">{{title}}</a>
										</div>
									</template>
								</amp-list>
							</div>
						</div>
					</div>
					<hr/>
					<% end %>
					<%= if length(@page.body.new) > 0 do %>
					<div class="card">
						<header class="card-header">
							<p class="card-header-title">
								Bài viết mới
							</p>
						</header>
						<div class="card-content">
							<div class="content">

								<amp-list
												width="auto"
												height="20"
												src="amp-state:data.new"
								>
									<div placeholder>Tải dữ liệu ...</div>
									<div fallback>Không có dữ liệu.</div>

									<template type="amp-mustache">

										<div class="url-entry">
											<a href="{{url}}">{{title}}</a>
										</div>
									</template>
								</amp-list>

							</div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>