@charset "utf-8";

// Set your brand colors
$purple: #8A4D76;
$pink: #FA7C91;
$brown: #757763;
$beige-light: #D0D1CD;
$beige-lighter: #EFF0EB;
//$blue: #3a69d9;
$blue: #0157b4;
$color-boder: #dbdbdb;
$text: #333;
// Update Bulma's global variables
$family-sans-serif: "Nunito", sans-serif;
$body-size: 10px;
$body-font-size: 1.6rem;
$grey-dark: $brown;
$grey-light: $beige-light;
$primary: $blue;
$link: $blue;
$section-padding: 1rem 1rem;

$size-1: 3rem;
$size-2: 2.2rem;
$size-3: 2rem;
$size-4: 1.8rem;
$size-5: 1.6rem;
$size-6: 1.4rem;
$size-7: 1.2rem;


//$widescreen-enabled: false;
//$fullhd-enabled: false;

// Update some of Bulma's component variables
$body-background-color: #fff;
$control-border-width: 1px;
//$input-border-color: transparent;
$input-border-color: #dbdbdb;
//$input-shadow: none;
$input-shadow: inset 0 0.0625em 0.125em rgba(10,10,10,.05);
//menu
$menu-label-color: white;
$menu-item-color: #000;

